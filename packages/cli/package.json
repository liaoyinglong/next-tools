{
  "name": "@scope/cli",
  "version": "1.0.0",
  "scripts": {
    "dev": "npm run build-fast -- --watch",
    "build": "tsup src/cli.ts src/index.ts --clean --splitting",
    "prepublishOnly": "npm run build",
    "test": "npm run build && npm run test-only",
    "test-only": "vitest run",
    "build-fast": "npm run build -- --no-dts"
  },
  "type": "module",
  "bin": {
    "sq": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js"
    },
    "./cli": {
      "import": "./dist/cli.js"
    }
  },
  "dependencies": {
    "@scope/wasm": "workspace:*",
    "cac": "^6.7.14",
    "cli-table3": "^0.6.3",
    "debug": "^4.3.4",
    "fs-extra": "^10.1.0",
    "globby": "^13.1.2",
    "p-map": "^5.5.0",
    "prompts": "^2.4.2",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/prompts": "^2.4.0",
    "tsup": "^6.2.3"
  }
}
