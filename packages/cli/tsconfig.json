{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2015",
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "noEmit": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "strictNullChecks": true,
    "stripInternal": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
